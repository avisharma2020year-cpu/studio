
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has a specific role
    function hasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own data, admins can read any
    match /users/{userId} {
      allow read: if isOwner(userId) || hasRole('admin');
      allow update: if isOwner(userId); // Users can update their own profile info
      allow create, delete: if hasRole('admin'); // Only admins can create/delete users
    }

    // All authenticated users can read timetables and events
    match /timetables/{timetableId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin'); // Only admins can create/update/delete timetables
    }
    
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin'); // Only admins can create/update/delete events
    }

    // Rules for absence requests
    match /requests/{requestId} {
      // Create: Students can create requests for themselves.
      allow create: if hasRole('student') && request.resource.data.studentId == request.auth.uid;

      // Read:
      // - Students can read their own requests.
      // - Faculty can read requests assigned to them.
      // - Admins can read all requests.
      allow read: if (hasRole('student') && resource.data.studentId == request.auth.uid) || 
                   (hasRole('faculty') && resource.data.facultyId == request.auth.uid) ||
                   (hasRole('admin'));

      // Update:
      // - Faculty can update (approve/reject) requests assigned to them.
      // - Admins can update any request.
      allow update: if (hasRole('faculty') && resource.data.facultyId == request.auth.uid) ||
                     hasRole('admin');
      
      // Delete: Only admins can delete requests
      allow delete: if hasRole('admin');
    }
  }
}
